mixin head(title, description, image, large, page, imageAlt)
  head
    title= title
    meta(name="description", content=description)
    meta(name="robots", content="noindex, nofollow")
    meta(name="charset", content="UTF-8")
    // Social media meta tags
    // Tells the crawler what the page url is
    meta(
      property="og:url",
      content="https://www.justinmuirhead.com/" + page + ".html"
    )
    // Tells the crawler the long form title of the page
    meta(property="og:title", content=title)
    // Tells the crawler the long form description of the page
    meta(property="og:description", content=description)
    // Gives the crawler an image that represents the page
    meta(property="og:image", content=image)
    // Tells the crawler what type of page this page is
    meta(property="og:type", content="website")
    // Tells the crawler how big to display the image
    meta(
      name="twitter:card",
      content=large === true ? "summary_large_image" : "summary"
    )
    // Tells the crawler alt text for the image
    meta(name="twitter:image:alt", content=imageAlt)
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="../scss/styles.scss")
    link(rel="preconnect", href="https://fonts.gstatic.com")
    link(
      href="https://fonts.googleapis.com/css2?family=Raleway&display=swap",
      rel="stylesheet"
    )
    // Favicons generated by https://realfavicongenerator.net/
    link(
      rel="apple-touch-icon",
      sizes="180x180",
      href="../img/icons/apple-touch-icon.png"
    )
    link(
      rel="icon",
      type="image/png",
      sizes="32x32",
      href="../img/icons/favicon-32x32.png"
    )
    link(
      rel="icon",
      type="image/png",
      sizes="16x16",
      href="../img/icons/favicon-16x16.png"
    )
    link(rel="manifest", href="../img/icons/site.webmanifest")
    link(
      rel="mask-icon",
      href="../img/icons/safari-pinned-tab.svg",
      color="#5bbad5"
    )
    link(rel="shortcut icon", href="../img/icons/favicon.ico")
    meta(name="msapplication-TileColor", content="#2b5797")
    meta(name="msapplication-config", content="../img/icons/browserconfig.xml")
    meta(name="theme-color", content="#ffffff")
